# Use the ASP.NET runtime image as the base
FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app
EXPOSE 80

# Use the .NET SDK image for building the application
FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src

# Copy the project file and restore dependencies
COPY Code/PrometheusRemoteWriteOpenShiftClusters/PrometheusRemoteWriteOpenShiftClusters.csproj Code/PrometheusRemoteWriteOpenShiftClusters/
RUN dotnet restore Code/PrometheusRemoteWriteOpenShiftClusters/PrometheusRemoteWriteOpenShiftClusters.csproj

# Copy the rest of the application code
COPY Code/PrometheusRemoteWriteOpenShiftClusters/. Code/PrometheusRemoteWriteOpenShiftClusters/
WORKDIR /src/Code/PrometheusRemoteWriteOpenShiftClusters

# Publish the application
RUN dotnet publish -c Release -o /app

# Final stage to run the application
FROM base AS final
WORKDIR /app
COPY --from=build /app ./
ENTRYPOINT ["dotnet", "PrometheusRemoteWriteOpenShiftClusters.dll"]
